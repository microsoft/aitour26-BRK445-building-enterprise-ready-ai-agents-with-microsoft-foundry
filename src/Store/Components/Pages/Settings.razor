@page "/settings"
@inject IJSRuntime JSRuntime
@using ZavaWorkingModes
@rendermode InteractiveServer

<PageTitle>Settings - Zava Store</PageTitle>

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h1 class="mb-4">
                <span class="bi bi-gear me-2"></span>
                Settings
            </h1>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8 col-lg-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <span class="bi bi-robot me-2"></span>
                        Working Mode Selection
                    </h5>
                </div>
                <div class="card-body">
                    <p class="text-muted">
                        Choose which working mode to use for the demos.
                    </p>

                    <div class="mb-4">
                        <label class="form-label"><strong>Select Working Mode:</strong></label>
                        <select class="form-select" @bind="selectedMode" @bind:after="OnModeChanged">
                            @foreach (var (mode, shortName, displayName, description) in WorkingModeProvider.GetAllModeMetadata())
                            {
                                var isDefault = mode == WorkingModeProvider.DefaultMode;
                                <option value="@shortName">@displayName @(isDefault ? "(Default)" : "")</option>
                            }
                        </select>
                        <small class="text-muted mt-2 d-block">
                            @GetModeDescription()
                        </small>
                    </div>

                    <div class="alert alert-info" role="alert">
                        <span class="bi bi-info-circle me-2"></span>
                        <strong>Current Selection:</strong> @GetModeDisplayName()
                    </div>

                    @if (showSavedMessage)
                    {
                        <div class="alert alert-success" role="alert">
                            <span class="bi bi-check-circle me-2"></span>
                            Settings saved! The new working mode will be used for all demos.
                        </div>
                    }

                    <hr />

                    <h6 class="mb-3">Working Mode Comparison</h6>
                    <div class="table-responsive">
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Mode</th>
                                    <th>Status</th>
                                    <th>Description</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var (mode, shortName, displayName, description) in WorkingModeProvider.GetAllModeMetadata())
                                {
                                    var isSelected = selectedMode == shortName;
                                    <tr class="@(isSelected ? "table-primary" : "")">
                                        <td><strong>@displayName</strong></td>
                                        <td>
                                            @if (isSelected)
                                            {
                                                <span class="badge bg-success">Active</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">Inactive</span>
                                            }
                                        </td>
                                        <td style="max-width: 300px;">@GetShortDescription(mode)</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private string selectedMode = WorkingModeProvider.GetShortName(WorkingModeProvider.DefaultMode);
    private bool showSavedMessage = false;

    protected override async Task OnInitializedAsync()
    {
        // Load saved preference from localStorage
        try
        {
            var savedMode = await JSRuntime.InvokeAsync<string>("localStorage.getItem", "agentFramework");
            if (!string.IsNullOrEmpty(savedMode))
            {
                selectedMode = savedMode.ToLowerInvariant();
            }
        }
        catch
        {
            // Default to MafFoundry if localStorage is not available
            selectedMode = WorkingModeProvider.GetShortName(WorkingModeProvider.DefaultMode);
        }
    }

    private async Task OnModeChanged()
    {
        // Save to localStorage
        await JSRuntime.InvokeVoidAsync("localStorage.setItem", "agentFramework", selectedMode);
        
        // Show saved message
        showSavedMessage = true;
        StateHasChanged();
        
        // Hide message after 3 seconds
        await Task.Delay(3000);
        showSavedMessage = false;
        StateHasChanged();
    }

    private string GetModeDisplayName()
    {
        var mode = WorkingModeProvider.Parse(selectedMode);
        return WorkingModeProvider.GetDisplayName(mode);
    }

    private string GetModeDescription()
    {
        var mode = WorkingModeProvider.Parse(selectedMode);
        return WorkingModeProvider.GetDescription(mode);
    }

    private string GetShortDescription(WorkingMode mode)
    {
        return mode switch
        {
            WorkingMode.DirectCall => "Direct HTTP calls without AI",
            WorkingMode.Llm => "Direct LLM calls via IChatClient",
            WorkingMode.MafFoundry => "MAF with cloud-hosted agents",
            WorkingMode.MafLocal => "MAF with locally created agents",
            _ => "Unknown mode"
        };
    }
}
