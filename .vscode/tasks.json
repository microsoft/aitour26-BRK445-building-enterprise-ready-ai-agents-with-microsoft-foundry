{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Aspire (with cleanup)",
            "type": "shell",
            "command": "${workspaceFolder}/src/run-aspire.sh",
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "Cleanup Aspire processes",
            "type": "shell",
            "command": "${workspaceFolder}/src/cleanup-aspire.sh",
            "problemMatcher": [],
            "presentation": {
                "reveal": "always"
            }
        },
        {
            "label": "Build Solution",
            "type": "shell",
            "command": "dotnet build",
            "options": {
                "cwd": "${workspaceFolder}/src"
            },
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}